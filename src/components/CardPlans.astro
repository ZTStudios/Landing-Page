---
  const { title, description, options } = Astro.props
---

<article class="card">
  <div class="contentInfo">
    <div class="containerHeader">
      <h3 class="titleCard">{title}</h3>
      <p class="descriptionCard">{description}</p>  
      <svg width="100%" height="5" version="1.1" xmlns="http://www.w3.org/2000/svg">
        <line stroke-dasharray="10, 5" x1="0" y1="1" x2="600" y2="1" style="stroke: rgb(105, 105, 105); stroke-width: 1px;"></line>
      </svg>
    </div>
    <div class="containerBody">
      <div>
        <h5 class="cotizacionSmall">Cotizacion</h5>
        <h2 class="cotizacionBig">Gratuita</h2>
      </div>
      <button class="button buttonInactive">Solicitar mi cotizacion</button>
    </div>
    <ul>
    </ul>
  </div>
</article>
<style>

  .card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    border-radius: 16px;
    border: 1px solid #1C173C;
    background: rgba(69, 69, 69, 0.14);
    backdrop-filter: blur(15px);
  }

  .containerHeader {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .containerBody {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 16px 0px;
    gap: 16px;
  }

  .contentInfo {
    max-width: 85%;
    padding: 24px 4px;
  }

  .dividerLine {
    width: 100%;
  }

  .titleCard {
    font-size: 1.25rem;
    font-weight: 600;
  }
  
  .descriptionCard {
    position: relative;
    top: -8px;
    font-size: 0.875rem;
    font-weight: 400;
    color: #ADADAD;
    max-width: 40ch;
    text-wrap: pretty;
  }

  .cotizacionSmall {
    font-size: 0.875rem;
    color: #ADADAD;
    font-weight: 600;
    margin: 0;
    line-height: 8px;
  }

  .cotizacionBig {
    margin: 0;
    font-size: 3rem;
    font-weight: 600;
    line-height: 56px;
  }

  .button {
    width: 100%;
    padding: 10px 0px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .buttonActive {
    border: 0.5px solid #652AC6;
    background: linear-gradient(90deg, #652AC6 0%, #B14DFF 100%);
    box-shadow: 0px 0px 50px 0px #652AC6;
    color: #DEDEDE;
  }

  .buttonInactive {
    border-radius: 8px;
    border: 0.5px solid #2A1D50;
    background: linear-gradient(90deg, rgba(21, 14, 38, 0.00) 0%, rgba(177, 77, 255, 0.05) 100%);
  }

</style>